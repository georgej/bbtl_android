<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/school_address"
        android:layout_alignParentRight="true"
        android:src="@drawable/more_middle_right_normal" />

    <TextView
        android:id="@+id/school_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/school_logo_s"
        android:text="eeeeeeeeeeeeee" />

    <TextView
        android:id="@+id/school_shortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_slogan"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/school_logo_s"
        android:text="eeeeeeeeeeeeee"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/school_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_shortName"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/school_logo_s"
        android:text="dddddddddddddd" />

    <ImageView
        android:id="@+id/school_logo_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>